<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_dashboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_image" />

    <!-- Button Layout -->
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <!-- 1분할 버튼 -->
        <Button
            android:id="@+id/button_one_split"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_one_rounded"
            android:backgroundTint="@color/white"
            android:text="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="0dp"
            android:padding="0dp"/>

        <!-- 2분할 버튼 -->
        <Button
            android:id="@+id/button_two_split"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_sharp"
            android:backgroundTint="@color/white"
            android:text="2"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="0dp"
            android:padding="0dp"/>

        <!-- 4분할 버튼 -->
        <Button
            android:id="@+id/button_four_split"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_four_rounded"
            android:backgroundTint="@color/white"
            android:text="4"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="0dp"
            android:padding="0dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
